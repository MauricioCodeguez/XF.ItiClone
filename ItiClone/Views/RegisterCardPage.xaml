<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ItiClone.Views.RegisterCardPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behavior="clr-namespace:ItiClone.Behavior"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    mc:Ignorable="d">

    <NavigationPage.TitleView>
        <Label
            Margin="0,0,70,0"
            FontSize="16"
            HorizontalTextAlignment="Center"
            Text="{Binding Title}"
            TextColor="{StaticResource TextColorWhite}"
            VerticalTextAlignment="Center" />
    </NavigationPage.TitleView>

    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <BoxView
                Grid.ColumnSpan="6"
                BackgroundColor="{StaticResource WindowBackground}"
                VerticalOptions="FillAndExpand" />
            <BoxView
                Grid.ColumnSpan="{Binding CurrentStep}"
                BackgroundColor="{StaticResource TextColorOrange}"
                VerticalOptions="FillAndExpand" />
        </Grid>

        <Frame
            x:Name="frCard"
            Grid.Row="1"
            Margin="20,0"
            Padding="0"
            BorderColor="#BFBFBF"
            CornerRadius="10"
            HeightRequest="170"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center">
            <Grid>
                <FlexLayout
                    x:Name="flFrontCard"
                    Padding="20"
                    Direction="Column"
                    JustifyContent="SpaceBetween">
                    <Label Text="Bandeira" TextColor="{StaticResource TextColorOrange}" />
                    <Label
                        FontSize="20"
                        Text="{Binding NickNameCard}"
                        TextColor="#DCDCDC" />
                    <Label
                        FontSize="20"
                        Text="{Binding CardNumber}"
                        TextColor="{StaticResource TextColorOrange}" />
                    <Label
                        FontSize="20"
                        Text="{Binding CardName}"
                        TextColor="#DCDCDC" />
                    <Label
                        FontSize="20"
                        HorizontalTextAlignment="End"
                        Text="{Binding ValidateCard}"
                        TextColor="#DCDCDC" />
                </FlexLayout>
                <FlexLayout
                    x:Name="flBackCard"
                    Direction="Column"
                    JustifyContent="SpaceEvenly"
                    Opacity="0">
                    <BoxView BackgroundColor="#1C2534" HeightRequest="50" />
                    <Label
                        Margin="0,0,35,0"
                        FontSize="20"
                        HorizontalTextAlignment="End"
                        Text="{Binding CVV}"
                        TextColor="{StaticResource TextColorOrange}"
                        VerticalTextAlignment="Center" />
                </FlexLayout>
            </Grid>
        </Frame>

        <FlexLayout
            Grid.Row="2"
            Margin="10"
            Direction="Column"
            HeightRequest="150">
            <Label Margin="5,0,0,0" Text="número do cartão de crédito" />
            <Entry Keyboard="Numeric">
                <Entry.Behaviors>
                    <behavior:MaskedBehavior Mask="XXXX XXXX XXXX XXXX" />
                </Entry.Behaviors>
            </Entry>
            <pancake:PancakeView
                Margin="0,20,0,0"
                CornerRadius="25"
                HeightRequest="50"
                IsEnabled="True">
                <pancake:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NextStepCommand}" />
                </pancake:PancakeView.GestureRecognizers>
                <pancake:PancakeView.Triggers>
                    <Trigger TargetType="pancake:PancakeView" Property="IsEnabled" Value="True">
                        <Setter Property="BackgroundGradientAngle" Value="275" />
                        <Setter Property="BackgroundGradientEndColor" Value="{StaticResource GradientEndColor}" />
                        <Setter Property="BackgroundGradientStartColor" Value="{StaticResource GradientStartColor}" />
                    </Trigger>
                    <Trigger TargetType="pancake:PancakeView" Property="IsEnabled" Value="False">
                        <Setter Property="BackgroundColor" Value="#E9E9E9" />
                    </Trigger>
                </pancake:PancakeView.Triggers>
                <Label
                    HorizontalTextAlignment="Center"
                    Text="continuar"
                    TextColor="{StaticResource TextColorWhite}"
                    VerticalTextAlignment="Center" />
            </pancake:PancakeView>
        </FlexLayout>
    </Grid>
</ContentPage>